#include <stdio.h>

int minimumSteps(int x, int y)
{
   if (x == y)
   {
      return 0;
   }

   int count = 1;
   int difference = y - x;
   while (difference > count)
   {
      if (difference <= 2 * count)
      {
         difference = 0;
      }
      count++;
   }

   return count;
}

int main()
{
   int x, y;
   printf("Enter x: ");
   scanf("%d", &x);
   printf("Enter y: ");
   scanf("%d", &y);
   printf("\nResult: %d\n", minimumSteps(x, y));

   return 0;
}
